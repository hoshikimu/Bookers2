<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="user-info">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: "jpeg", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <table class="table" cellpadding="10">
          <tr><td>name</td><td><%= @user.name %></td></tr>
          <tr><td>introduction</td><td><%= @user.introduction %></td></tr>
        </table>
        <a href="/users/<%= @user.id %>/edit" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></a>
      </div>
      <div class="new-book">
        <h2>New book</h2>
        <% if @book.errors.any? %>
          <div id="errors_explanation">
            <p class="text-danger"><%= @book.errors.count %>件のエラーが発生しました。</p>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li class="text-danger"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_for(@book, url: books_path, method: :post) do |f| %>
          <div class="form-group">
            <label for="title">Title</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="body">Opinion</label>
            <%= f.text_area :body, class:"form-control" %>
          </div>
          <%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-9">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @book.user, :profile_image, format: "jpeg", width:"50", height:"50", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book) , class:"btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger" %></td>
          </tr>
      </table>
    </div>
  </div>
</div>