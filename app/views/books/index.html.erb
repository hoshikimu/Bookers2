<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div class="user-info">
				<h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: "jpeg", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <table class="table" cellpadding="10">
          <tr><td>name</td><td><%= @user.name %></td></tr>
          <tr><td>introduction</td><td><%= @user.introduction %></td></tr>
        </table>
        <a href="/users/<%= current_user.id %>/edit" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></a>
			</div>
			<div class="new-book">
				<h2>New book</h2>
        <% if @book.errors.any? %>
          <div id="errors_explanation">
            <p class="text-danger"><%= pluralize(@book.errors.count, "error") %>
            prohibited this book from being saved:</p>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li class="text-danger"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_for(@book, url: books_path, method: :post) do |f| %>
          <div class="form-group">
            <label for="title">Title</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="body">Opinion</label>
            <%= f.text_area :body, class:"form-control" %>
          </div>
          <%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
        <% end %>
			</div>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to "/users/#{book.user_id}" do %>
                <%= attachment_image_tag book.user, :profile_image, format: "jpeg", width:"50", height:"50", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <% if book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(book), method: :delete do %>
                  <span class="glyphicon glyphicon-heart text-danger" aria-hidden="true"></span>
                <% end %>
                <%= book.favorites.count %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(book), method: :post do %>
                  <span class="glyphicon glyphicon-heart text-muted" aria-hidden="true"></span>
                <% end %>
                <span><%= book.favorites.count %></span>
              </td>
            <% end %>
            <td>コメント数：<%= book.post_comments.count %></td>
          </tr>
        <% end %>
      </table>
		</div>
	</div>
</div>