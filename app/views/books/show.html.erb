<div class="container">
  <%= render "devise/shared/notification" %>
  <div class="row">
    <div class="col-xs-3">
      <div class="user-info">
        <h2>User info</h2>
        <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 60, 60, format: "jpeg", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
        <table class="table" cellpadding="10">
          <tr><td>name</td><td><%= @book_detail.user.name %></td></tr>
          <tr><td>introduction</td><td><%= @book_detail.user.introduction %></td></tr>
        </table>
        <a href="/users/<%= current_user.id %>/edit" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></a>
      </div>
      <div class="new-book">
        <h2>New book</h2>
        <% if @book.errors.any? %>
          <div id="errors_explanation">
            <p class="text-danger"><%= pluralize(@book.errors.count, "error") %>
            prohibited this book from being saved:</p>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li class="text-danger"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_for(@book, url: books_path, method: :post) do |f| %>
          <div class="form-group">
            <label for="title">Title</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="body">Opinion</label>
            <%= f.text_area :body, class:"form-control" %>
          </div>
          <%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
    
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @book_detail.user, :profile_image, format: "jpeg", width:"50", height:"50", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= @book_detail.title %></td>
            <td><%= @book_detail.body %></td>
            <% if @book_detail.user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book_detail) , class:"btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book_detail), method: :delete, class:"btn btn-danger" %></td>
            <% end %>
              <td>コメント数：<%= @book_detail.post_comments.count %></td>
            <% if @book_detail.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book_detail), method: :delete do %>
                  <span class="glyphicon glyphicon-heart text-danger" aria-hidden="true"></span>
                <% end %>
                <%= @book_detail.favorites.count %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(@book_detail), method: :post do %>
                  <span class="glyphicon glyphicon-heart text-muted" aria-hidden="true"></span>
                <% end %>
                <span><%= @book_detail.favorites.count %></span>
              </td>
            <% end %>
          </tr>
          <tr>
            <td><%= link_to @book_detail.user.name, user_path(@book_detail.user_id) %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <%= render partial: 'books/post_comment', locals: {post_comments: @post_comments, book_detail: @book_detail, post_comment_new: @post_comment_new}, class:"post_comment" %>
      <div>
        <%= form_with model: [@book_detail, @post_comment_new] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class:"form-control" %>
        </div>
          <%= f.submit "送信", class:"btn btn-default btn-xs"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>